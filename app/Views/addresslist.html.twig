{% extends 'default.html.twig' %}

{% block body %}

    <div><h4 class="text-center">Liste des adresses [ {{ contact.nom }} {{ contact.prenom }} : {{ contact.email }}
            ]</h4></div>
    <div class="row row col-md-12 pull-right ">
        <a href="index.php/?p=address.add&id={{ idContact }}" class="btn btn-primary btn-xs pull-right"><b>+</b> Ajouter une
            adresse</a>
    </div>

    <div class="row col-md-12 ">
        <table class="table table-striped custab">
            <thead>
            <tr>
                <th>ID</th>
                <th>Numero</th>
                <th>Rue</th>
                <th>Code Postal</th>
                <th>ville</th>
                <th>pays</th>
                <th class="text-center">Action</th>
            </tr>
            </thead>
            {% for address in addresses %}
                <tr>
                    <td>{{ address.id|e }}</td>
                    <td>{{ address.number|e }}</td>
                    <td>{{ address.street|e }}</td>
                    <td>{{ address.postalCode|e }}</td>
                    <td>{{ address.city|e }}</td>
                    <td>{{ address.country|e }}</td>
                    <td class="text-center">
                        <a class='btn btn-info btn-xs' href="/public/index.php?p=address.edit&id={{ address.id }}"><span
                                    class="glyphicon glyphicon-edit"></span> Edition</a>
                        <a href="/public/index.php?p=address.delete&id={{ address.id }}" class="btn btn-danger btn-xs"><span
                                    class="glyphicon glyphicon-remove"></span> Suppression</a></td>
                </tr>
            {% endfor %}

        </table>
    </div>
{% endblock %}
